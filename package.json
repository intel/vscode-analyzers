{
	"name": "profiling-tools-launcher",
	"displayName": "Intel® oneAPI Profilng Tools Launcher",
	"description": "Launch Intel® VTune™ Profiler or Intel® Advisor while passing project specific parameters to the tool",
	"publisher": "intel-corporation",
	"version": "0.0.2",
	"license": "MIT",
	"icon": "media/icon.png",
	"preview": true,
	"engines": {
		"vscode": "^1.42.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:workbench.action.tasks.runTask",
		"*"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "intelOneAPI.profiling.launchAdvisor",
				"title": "Intel oneAPI: Launch Advisor"
			},
			{
				"command": "intelOneAPI.profiling.launchVTune",
				"title": "Intel oneAPI: Launch VTune Profiler"
			}
		],
		"configuration": [
			{
				"title": "Intel® oneAPI Profiling Tools Launcher",
				"properties": {
					"intelOneAPI.profiling.binary-path": {
						"type": "string",
						"description": "Path of the executable to analyze",
						"scope": "resource"
					},
					"intelOneAPI.profiling.advisor.install-root": {
						"type": "string",
						"description": "Root install location for Intel® Advisor",
						"scope": "window"
					},
					"intelOneAPI.profiling.vtune.install-root": {
						"type": "string",
						"description": "Root install location for Intel® VTune™ Profiler",
						"scope": "window"
					},
					"intelOneAPI.profiling.advisor.project-folder": {
						"type": "string",
						"description": "Path of the Intel® Advisor project folder",
						"scope": "resource"
					},
					"intelOneAPI.profiling.vtune.project-folder": {
						"type": "string",
						"description": "Path of the Intel® VTune™ Profiler project folder",
						"scope": "resource"
					}
				}
			}
		],
		"taskDefinitions": [
			{
				"type": "toolProvider",
				"properties": {
					"test1": {
						"type": "string",
						"description": "Testing"
					}
				}
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile",
		"test": "node ./out/test/runTest.js",
		"lint": "eslint -c .eslintrc.js --ext .ts ./",
		"package": "vsce package --yarn --baseContentUrl https://gitlab.devtools.intel.com/sip-oneapi/vscode-launcher-plugin/raw/master/"
	},
	"devDependencies": {
		"@types/mkdirp": "^0.5.2",
		"@types/mocha": "^7.0.1",
		"@types/node": "^10.12.21",
		"@types/rimraf": "^2.0.2",
		"@types/vscode": "^1.36.0",
		"@typescript-eslint/eslint-plugin": "^2.19.0",
		"@typescript-eslint/parser": "^2.19.0",
		"eslint": "^6.8.0",
		"mocha": "^7.0.1",
		"typescript": "^3.3.1",
		"vsce": "^1.73.0",
		"vscode-test": "^1.3.0"
	},
	"dependencies": {}
}
